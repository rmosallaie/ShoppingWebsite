@inject SignInManager<IdentityUser> signInManager;
@inject RoleManager<IdentityRole> roleManager;
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopping Website</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>

    <!-- Material Design Bootstrap Pro V4.4 Libraries -->
    <script src="~/js/MDB/bootstrap.js"></script>
    <link href="~/css/MDB/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/MDB/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/MDB/bootstrap.min.js"></script>
    @*<script src="~/js/MDB/mdb.js"></script>
    <link href="~/css/MDB/css/mdb-pro.css" rel="stylesheet" />
    <script src="~/js/MDB/datatables.min.js"></script>
    <script src="~/js/MDB/datatables.js"></script>
    <link href="~/css/MDB/css/datatables.css" rel="stylesheet" />
    <link href="~/css/MDB/css/datatables.min.css" rel="stylesheet" />
    <script src="~/js/MDB/datatables-select.js"></script>
    <link href="~/css/MDB/css/datatables-select.css" rel="stylesheet" />*@


     
    <!-- Material Design Bootstrap Pro V4.4 Libraries -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" href="#">ShoppingWebsite</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-page="/UserManagement/Index">Users</a>
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-page="/Administration/ListRoles">Roles</a>
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-page="/Account/ChangePassword">Change Password</a>
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-page="/ProductsManagement/AddProduct">Add Product</a>
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-page="/ProductsManagement/ProductsList">Products List</a>
                                </div>
                            </li>

                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item text-white">
                                <form method="post" asp-page="/Account/Logout">
                                    <button type="submit" style="width:auto" class="nav-link btn btn-link py-0 text-white">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @*<main role="main" class="pb-3">

        </main>*@
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ShoppingWebsite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    @RenderSection("Scripts", required: false)
</body>
</html>
