@page
@model EditRoleModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="editRole.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="editRole.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="editRole.RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="editRole.RoleName" class="form-control">
            <span asp-validation-for="editRole.RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="/Administration/ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.editRole.Users.Any())
            {
                foreach (var user in Model.editRole.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-page="/Administration/EditUsersInRole" 
               asp-route-roleId="@Model.editRole.Id" class="btn btn-primary" style="width:auto">Add or remove Users</a>
        </div>
    </div>
</form>
