@page
@model ShoppingWebsite.Pages.ProductsManagement.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Product</h1>

<form enctype="multipart/form-data" method="post" class="mt-3">
    <input asp-for="ProductEdit.ProductId" hidden/>
    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="ProductEdit.Name" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductEdit.Name" class="form-control" placeholder="نام">
            <span asp-validation-for="ProductEdit.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="ProductEdit.Brand" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ProductEdit.Brand" class="custom-select mr-sm-2">
                <option selected disabled>انتخاب کنید</option>
                @foreach (var item in Model.BrandsList)
                {
                    <option value="@item">@item</option>
                }
            </select>
            <span asp-validation-for="ProductEdit.Brand" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="ProductEdit.UnitPrice" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductEdit.UnitPrice" class="form-control" placeholder="قیمت" value="@Model.ProductEdit.UnitPrice">
            <span asp-validation-for="ProductEdit.UnitPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="ProductEdit.ProductNumber" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductEdit.ProductNumber" class="form-control" placeholder="شماره" value="@Model.ProductEdit.ProductNumber">
            <span asp-validation-for="ProductEdit.ProductNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="ProductEdit.Category" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ProductEdit.Category" class="custom-select mr-sm-2">
                <option selected disabled>انتخاب کنید</option>
                @foreach (var item in Model.CategoriesList)
                {
                    <option value="@item">@item</option>
                }
            </select>
            <span asp-validation-for="ProductEdit.Category" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="ProductEdit.Quantity" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductEdit.Quantity" class="form-control" placeholder="تعداد" value="@Model.ProductEdit.Quantity">
            <span asp-validation-for="ProductEdit.Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex flex-row-reverse text-right">
        <label asp-for="Photo" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <label id="photoname" class="custom-file-label text-right" style="padding-right:100px">برای تغییر تصویر کلیک کنید...</label>
                <input asp-for="Photo" class="form-control custom-file-input"/>
            </div>
        </div>
    </div>

    <div class="form-group text-right d-flex flex-row-reverse photo">
        <label class="col-sm-1 col-form-label">تصویر کالا</label>
        <img src="~/images/ProductImages/@Model.ProductEdit.ProductPhotoPath" alt="تصویر کالا" width="200" height="200"/>
    </div>

    <script type="text/javascript">
        $(function () {
            $('input[type="file"]').change(function (e) {
                var fileName = e.target.files[0].name;
                //alert('The file "' + fileName + '" has been selected.');
                document.getElementById("photoname").innerHTML = fileName;
            });

        });
    </script>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row text-left">
        <button type="submit" class="btn btn-primary font-weight-bold">به روز رسانی </button>
    </div>

</form>

